#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include<math.h>
#include<stdlib.h>
int day_of_year(int year, int month, int day);
int isRunNian(int year);
int main(void)
{
	int year,month,day;
	printf("Enter year,month,day:");
	scanf("%d%d%d", &year, &month, &day);
	printf("The day of year is:%d", day_of_year(year, month, day));
	return 0;
}
int isRunNian(int year)
{
	if ((year % 4 == 0 && year % 100 != 0) || (year % 400 == 0))
	{
		return 1;
	}
	else
	{
		return 0;
	}
}
int day_of_year(int year, int month, int day)
{
	int Run = isRunNian(year);
	int tab[2][13] = { {31,28,31,30,31,30,31,31,30,31,30,31},
					{31,29,31,30,31,30,31,31,30,31,30,31} };
	int day_of_year = 0;
	for (int i = 1;i < month;i++)
	{
		day_of_year += tab[Run][i];
	}
	day_of_year += day;
	return day_of_year;
}
